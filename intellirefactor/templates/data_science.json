{
  "_description": "Configuration template for data science projects (Jupyter notebooks, ML pipelines)",
  "analysis": {
    "max_file_size": 5242880,
    "excluded_patterns": [
      "*.pyc",
      "__pycache__",
      ".git",
      ".venv",
      "venv",
      "node_modules",
      "*.egg-info",
      "build",
      "dist",
      ".pytest_cache",
      ".coverage",
      "htmlcov",
      "data/",
      "datasets/",
      "models/",
      "*.pkl",
      "*.joblib",
      "*.h5",
      "*.csv",
      "*.parquet",
      ".ipynb_checkpoints"
    ],
    "metrics_thresholds": {
      "cyclomatic_complexity": 12.0,
      "maintainability_index": 15.0,
      "lines_of_code": 800
    },
    "analysis_depth": 8,
    "include_patterns": ["**/*.py", "**/*.ipynb"],
    "exclude_patterns": [
      "**/test_*.py",
      "**/*_test.py",
      "**/__pycache__/**",
      "**/.*",
      "**/build/**",
      "**/dist/**",
      "**/data/**",
      "**/datasets/**",
      "**/models/**",
      "**/.ipynb_checkpoints/**"
    ],
    "large_file_threshold": 800,
    "complexity_threshold": 20.0,
    "responsibilities_threshold": 6,
    "god_object_threshold": 20,
    "min_candidate_size": 150,
    "max_candidates": 8
  },
  "refactoring": {
    "safety_level": "moderate",
    "auto_apply": false,
    "backup_enabled": true,
    "validation_required": true,
    "max_operations_per_session": 25,
    "stop_on_failure": false
  },
  "knowledge": {
    "knowledge_base_path": "knowledge",
    "auto_learn": true,
    "confidence_threshold": 0.6,
    "max_knowledge_items": 8000
  },
  "plugins": {
    "plugin_directories": ["plugins", "ds_plugins"],
    "auto_discover": true,
    "enabled_plugins": ["notebook_analyzer", "pandas_analyzer", "sklearn_analyzer"]
  }
}